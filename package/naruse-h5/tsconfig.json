{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "ES5"],
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": false,
    "baseUrl": ".",
    "module": "ESNext",
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "typeRoots": ["./types"]
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ],
}