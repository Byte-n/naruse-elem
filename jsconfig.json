{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": ".",
        "allowJs": true,
        "module": "ES6",
        "moduleResolution": "node",
        "typeRoots": [
            "./types/*"
        ],
        "paths": {
            "@utils/*": [
                "src/utils/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@adverts/*": [
                "src/adverts/*"
            ],
        },
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
}